<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.ControllerTransfer" id="transferDialog">

    <content>
        <GridPane>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                <padding>
                    <Insets left="10" right="10" top="10" bottom="10"/>
                </padding>
                <Label text="Amount to transfer: " id="amountTransfer"/>
                <TextField fx:id="amountTransfer"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                <padding>
                    <Insets left="10" right="10" top="10" bottom="10"/>
                </padding>
                <Label text="To account: " id="toAccountName"/>
                <TextField fx:id="toAccountName"/>
            </HBox>
            <HBox alignment="BOTTOM_LEFT" GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="5">
                <padding>
                    <Insets left="10" right="10" top="20" bottom="10"/>
                </padding>
                <Label text="Do you want to proceed with the transfer?"/>
            </HBox>
        </GridPane>
    </content>
</DialogPane>

