<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.ControllerExpense" id="expenseDialog">

    <content>
        <GridPane>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="5">
                <padding>
                    <Insets left="10" right="30" top="10" bottom="10"/>
                </padding>
                <Label text="Add expense to account: " id="accountName"/>
                <TextField fx:id="accountName"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="5">
                <padding>
                    <Insets left="30" right="30" top="10" bottom="10"/>
                </padding>
                <Label text="Amount to add: " id="amountExpense"/>
                <TextField fx:id="amountExpense" id="amountExpense"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1" spacing="5">
                <padding>
                    <Insets left="10" right="30" top="10" bottom="10"/>
                </padding>
                <Label text="Updated balance: " id="updatedBalance"/>
                <Label fx:id="updatedBalance" id="updatedBalance"/>
            </HBox>
            <Separator GridPane.columnSpan="2" GridPane.rowIndex="2"/>
            <HBox alignment="BOTTOM_RIGHT" GridPane.rowIndex="3" GridPane.columnIndex="1" spacing="5">
                <padding>
                    <Insets left="10" right="10" top="10" bottom="5"/>
                </padding>
                <Label text="Do you want to proceed with the expense?"/>
            </HBox>
        </GridPane>
    </content>
</DialogPane>

